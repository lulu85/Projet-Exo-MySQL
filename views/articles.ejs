<%- include('partials/header.ejs') %>
<div class="container">
    <div class="row">
        <div class="col">
            <h1>les articles</h1>
            <% articles.forEach(function(article) {%>
            <div class="card" style="width: 18rem;">
                <img src=" <%=article.image%> " class="neige_bretagne">
                <div class="card-body">
                    <h5 class="card-title"> <%=article.titre%> </h5>
                    <p class="card-text"> <%=article.description%> </p>
                    <a href="/liste-des-articles/<%= article.articleId %>" class="btn btn-primary">Lire la suite..</a>
                </div>
            </div>
            <%});%>

        </div>
    </div>
</div>
<%- include('partials/footer.ejs') %>